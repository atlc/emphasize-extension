{
    "name": "emphasize-me",
    "version": "1.0.2",
    "description": "Right-click highlighted text to turn it into CLAP 👏 EMPHASIZED 👏 TEXT!",
    "manifest_version": 2,
    "permissions": [
        "contextMenus"
      ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": { 
      "16": "images/icons/clap16.png",
      "32": "images/icons/clap32.png",
      "64": "images/icons/clap64.png",
     "128": "images/icons/clap128.png",
     "256": "images/icons/clap256.png"
    }
  }